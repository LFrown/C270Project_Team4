pipeline {
    agent any
 
    environment {
        DOCKER_HUB_USERNAME = 'your-dockerhub-username'
        DOCKER_HUB_REPO = 'inventory-manager'
    }
 
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/LFrown/C270Project_Team4' // Replace with your repo URL
            }
        }
 
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_HUB_USERNAME/$DOCKER_HUB_REPO:latest .'
            }
        }
 
        stage('Push Docker Image to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials-id', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                    sh 'echo $PASSWORD | docker login -u $USERNAME --password-stdin'
                    sh 'docker push $DOCKER_HUB_USERNAME/$DOCKER_HUB_REPO:latest'
                }
            }
        }
 
        stage('Deploy Docker Container') {
            steps {
                sh '''
                docker pull $DOCKER_HUB_USERNAME/$DOCKER_HUB_REPO:latest
                docker stop inventory-manager || true
                docker rm inventory-manager || true
                docker run -d --name inventory-manager -p 5000:5000 $DOCKER_HUB_USERNAME/$DOCKER_HUB_REPO:latest
                '''
            }
        }
    }
 
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed. Check the logs.'
        }
    }
}